                                        <svg class="w-4 h-4 inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                                        </svg>
                                    </button>
                                    <a href="/Ticket/Details?id=${ticket.ticketId}" class="text-green-600 hover:text-green-800 mr-2">
                                        <svg class="w-4 h-4 inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                    </a>
                                    <button onclick="deleteTicket(${ticket.ticketId})" class="text-red-600 hover:text-red-800">
                                        <svg class="w-4 h-4 inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                        </svg>
                                    </button>
                                </td>
                            </tr>
                        `;
            }

            function getStatusClass(status) {
                const statusClasses = {
                    'Resolved': 'bg-green-400',
                    'Unconfirmed': 'bg-yellow-400',
                    'In Progress': 'bg-blue-400',
                    'default': 'bg-purple-400'
                };
                return statusClasses[status] || statusClasses.default;
            }

            function getPriorityText(priority) {
                switch (priority) {
                    case 1: return 'Low';
                    case 2: return 'Medium';
                    case 3: return 'High';
                    case 4: return 'Critical';
                    default: return priority;
                }
            }

            // Initial load
            loadTickets();

            // Filter dropdown toggle
            $('#filterButton').click(function (e) {
                e.stopPropagation();
                $('#filterDropdown').toggleClass('hidden');
            });

            // Close dropdown when clicking outside
            $(document).click(function (e) {
                if (!$(e.target).closest('#filterButton, #filterDropdown').length) {
                    $('#filterDropdown').addClass('hidden');
                }
            });

            // Apply filters button click
            $('#applyFilters').click(function () {
                $('#currentPage').val(1); // Reset to first page when applying filters
                loadTickets();
                $('#filterDropdown').addClass('hidden');
            });

            // Prevent dropdown from closing when clicking inside it
            $('#filterDropdown').click(function (e) {
                e.stopPropagation();
            });

            // Clear filters button click
            $('#clearFilters').click(function () {
                // Uncheck all checkboxes
                $('input[name="categories"], input[name="priorities"]').prop('checked', false);

                // Reset to first page
                $('#currentPage').val(1);

                // Reload tickets
                loadTickets();

                // Close dropdown
                $('#filterDropdown').addClass('hidden');
            });
        });

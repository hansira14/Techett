<div id="addTicketModal" class="modal fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50">
    <div class="modal-content bg-white w-1/3 rounded-lg shadow-lg relative p-8">
        <span class="close absolute top-3 right-3 text-gray-400 hover:text-gray-600 cursor-pointer text-2xl">&times;</span>

        <!-- Title section with gradient frame -->
        <div class="heading-frame" style="width: 100%; height: 100px; background: linear-gradient(to right, #7E8EF1 100%, #E8ECFF 80%); display: flex; align-items: center; justify-content: center; border-top-left-radius: 10px; border-top-right-radius: 10px; margin: 0; padding: 0;">
            <h1 style="font-size: 2.5rem; color: white; font-weight: bold; margin: 0;">Create Ticket</h1>
        </div>

        <form id="ticketForm" style="padding-top: 20px;">
            <!-- Subject Field -->
            <div class="form-group mb-4">
                <label for="subject" class="block text-gray-700 text-lg font-medium mb-2">Subject:</label>
                <input type="text" id="subject" name="subject" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
            </div>

            <!-- Status Field -->
            <div class="form-group mb-4">
                <label for="status" class="block text-gray-700 text-lg font-medium mb-2">Status:</label>
                <select id="status" name="status" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <option value="">Select Status</option>
                    <option value="open">Open</option>
                    <option value="inProgress">In Progress</option>
                    <option value="closed">Closed</option>
                </select>
            </div>

            <!-- Priority Field -->
            <div class="form-group mb-4">
                <label for="priority" class="block text-gray-700 text-lg font-medium mb-2">Priority:</label>
                <select id="priority" name="priority" class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                    <option value="">Select Priority</option>
                    <option value="low">Low</option>
                    <option value="medium">Medium</option>
                    <option value="high">High</option>
                </select>
            </div>

            <!-- Department Field -->
            <div class="form-group mb-4">
                <label for="department" class="block text-gray-700 text-lg font-medium mb-2">Department:</label>

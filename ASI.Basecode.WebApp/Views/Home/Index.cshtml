                        <button type="button" onclick="editTicketModal(@ticket.TicketId)" class="text-yellow-600 hover:text-yellow-900 text-sm">Edit</button>
                        <button class="text-red-600 hover:text-red-900 text-sm" onclick="deleteTicket(@ticket.TicketId)">Delete</button>

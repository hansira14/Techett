                        <div class="text-gray-600 text-sm mb-2">
                            <span class="font-bold">Status:   </span> @ticket.Status
                        </div>
                        <div class="text-gray-600 text-sm mb-3">
                            <span class="font-bold">Agent:    </span> @(ticket.AssignedToName ?? "Unassigned")

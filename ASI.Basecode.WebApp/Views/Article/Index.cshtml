@model IEnumerable<ArticleViewModel>

<h2>Articles</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Article</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Created By</th>
            <th>Created On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.CreatedByName</td>
                <td>@article.CreatedOn.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@article.ArticleId">View</a> |
                    <a asp-action="Edit" asp-route-id="@article.ArticleId">Edit</a> |
                    <form asp-action="Delete" asp-route-id="@article.ArticleId" method="post" style="display: inline">
                        <button type="submit" class="btn btn-link" onclick="return confirm('Are you sure you want to delete this article?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>